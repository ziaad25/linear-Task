<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheChance" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="text1">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/dm_sans</item>
    </style>

    <style name="text1.houres">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="name">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/dm_sans_bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="text1.job_city">
        <item name="android:fontFamily">@font/dm_sans_medium</item>
        <item name="android:textColor">#DE122940</item>
    </style>

    <style name="text1.location">
        <item name="android:textColor">#99263238</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="text1.days">
        <item name="android:textColor">#61122940</item>
    </style>


    <style name="text1.review">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="text1.rate">
        <item name="android:fontFamily">@font/dm_sans_medium</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <style name="image">
        <item name="cornerSize">8dp</item>
    </style>
</resources>